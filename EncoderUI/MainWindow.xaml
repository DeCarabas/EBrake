<Window x:Class="EncoderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="MainWindow" Height="709" Width="799">

    <Window.Resources>
        <Style TargetType="Button" x:Key="SettingsWarningBar" BasedOn="{StaticResource WarningBar}">
            <Setter Property="Content">
                <Setter.Value>Some settings are missing. Click here to go to the settings tab.</Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SettingsValid}" Value="true">
                    <Setter Property="Visibility"  Value="Hidden" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="DownloadButton" BasedOn="{StaticResource MetroCircleButtonStyle}">
            <Setter Property="Width" Value="55" />
            <Setter Property="Height" Value="55" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Rectangle Width="20" Height="20">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_download}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SettingsValid}" Value="false">
                    <Setter Property="Button.IsEnabled"  Value="false" />
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Rectangle Width="20" Height="20">
                                    <Rectangle.Fill>
                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_download_disabled}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Controls:MetroContentControl>
        <Grid>

            <TabControl x:Name="Tabs">
                <TabItem Header="Movie">
                    <Controls:MetroContentControl>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" 
                              DataContext="{Binding Path=MovieEncodeInfo}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.RowSpan="5" Source="/EncoderUI;component/Popcorn.jpg" 
                                   HorizontalAlignment="Center" Stretch="UniformToFill" />

                            <Button Click="OnSettingsClicked" Style="{StaticResource SettingsWarningBar}" />

                            <TextBox Grid.Row="1" Text="{Binding Path=MovieTitle}" Margin="10" TextAlignment="Center" 
                                     FontSize="24" />
                            <TextBlock Grid.Row="2" Style="{StaticResource entryLabel}" Text="Movie Title" />

                            <TextBox Grid.Row="3" Text="{Binding Path=MovieYear}" Margin="10" TextAlignment="Center" 
                                     FontSize="24" />
                            <TextBlock Grid.Row="4" Style="{StaticResource entryLabel}" Text="Movie Year" />

                            <ProgressBar Grid.Row="5" />
                            <TextBlock Grid.Row="6" HorizontalAlignment="Center" Text="" />

                            <Button Grid.Row="7" Style="{StaticResource DownloadButton}" Click="OnStartButtonClicked" />                                
                        </Grid>
                    </Controls:MetroContentControl>
                </TabItem>
                <TabItem Header="TV Series">
                    <Controls:MetroContentControl>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.RowSpan="5" Grid.ColumnSpan="2" Source="/EncoderUI;component/Static.jpg" 
                                   HorizontalAlignment="Center"  Stretch="UniformToFill" />

                            <Button Click="OnSettingsClicked" Grid.ColumnSpan="2" 
                                    Style="{StaticResource SettingsWarningBar}" />

                            <TextBox Grid.Row="1" Text="{Binding Path=Series}" Margin="10" TextAlignment="Center" 
                                     FontSize="24" />
                            <TextBlock Grid.Row="2" Style="{StaticResource entryLabel}" Text="Series" />
                            
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Path=Season}" Margin="10" 
                                     TextAlignment="Center" FontSize="24" />
                            <TextBlock Grid.Row="2" Grid.Column="2" Style="{StaticResource entryLabel}" Text="Season" />

                            <ProgressBar Grid.Row="5" Grid.ColumnSpan="2" />
                            <TextBlock Grid.Row="5" Grid.ColumnSpan="2" />

                            <Button Grid.Row="6" Grid.ColumnSpan="2" Style="{StaticResource DownloadButton}"  />
                        </Grid>
                    </Controls:MetroContentControl>
                </TabItem>
                <TabItem Header="Settings" x:Name="SettingsTab">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Style="{StaticResource entryLabel}" Text="Source DVD" />
                        <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Center" ItemsSource="{Binding Path=OpticalDrives}" 
                                        SelectedItem="{Binding Path=SourceDrive}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <TextBlock Text="{Binding RootDirectory}" />
                                        <TextBlock Text="{Binding VolumeLabel}" Margin="10,0,0,0" />
                                    </WrapPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Style="{StaticResource entryLabel}" Text="Destination" />
                        <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource textEntry}" Text="{Binding Path=OutputPath}" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Controls:MetroContentControl>        
</Window>
