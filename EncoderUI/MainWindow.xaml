<Window x:Class="EncoderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="709" Width="799">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="entryLabel">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="20,0,10,0" />
        </Style>
        <Style TargetType="TextBox" x:Key="textEntry">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <Style TargetType="TextBlock" x:Key="textValue">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style TargetType="Button" x:Key="StartEncodingButton">
            <Setter Property="Content" Value="Start" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsEncoding}" Value="true">
                    <Setter Property="Visibility" Value="Hidden" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ProgressBar" x:Key="EncodingProgress">
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Visibility" Value="Hidden" />
            <Setter Property="Value" Value="{Binding PercentComplete}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsEncoding}" Value="true">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>            
        </Style>
        <Style TargetType="TextBlock" x:Key="EncodingETA">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Visibility" Value="Hidden" />
            <Setter Property="Text" Value="{Binding ETA}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsEncoding}" Value="true">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Copy A Movie">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" DataContext="{Binding Path=MovieEncodeInfo}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111*" />
                        <ColumnDefinition Width="301*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Style="{StaticResource entryLabel}" Text="Source DVD" />
                    <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" 
                              VerticalAlignment="Center" ItemsSource="{Binding Path=OpticalDrives}" 
                              SelectedItem="{Binding Path=SourceDrive}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding RootDirectory}" />
                                    <TextBlock Text="{Binding VolumeLabel}" Margin="10,0,0,0" />
                                </WrapPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Grid.Row="1" Style="{StaticResource entryLabel}" Text="Destination" />
                    <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource textEntry}" Text="{Binding Path=OutputPath}" />
                    <TextBlock Grid.Row="2" Style="{StaticResource entryLabel}" Text="Movie Title" />
                    <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource textEntry}" Text="{Binding Path=MovieTitle}" />
                    <TextBlock Grid.Row="3" Style="{StaticResource entryLabel}" Text="Movie Year" />
                    <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource textEntry}" Text="{Binding Path=MovieYear}"/>
                    <TextBlock Grid.Row="4" Style="{StaticResource entryLabel}" Text="Run Length" />
                    <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource textValue}"  />

                    <Button Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource StartEncodingButton}" Click="StartButton_Click" />
                    <ProgressBar Grid.ColumnSpan="2" Grid.Row="5" Style="{StaticResource EncodingProgress}" />
                    <TextBlock Grid.ColumnSpan="2" Grid.Row="5" Style="{StaticResource EncodingETA}" />
                </Grid>
            </TabItem>
            <TabItem Header="Copy A TV Series">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111*" />
                        <ColumnDefinition Width="301*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Style="{StaticResource entryLabel}" Text="Series Title" />
                    <TextBlock Grid.Row="1" Style="{StaticResource entryLabel}" Text="Season" />
                    <TextBlock Grid.Row="2" Style="{StaticResource entryLabel}" Text="DVD Drive" />
                    <TextBlock Grid.Row="3" Style="{StaticResource entryLabel}" Text="Destination" />
                </Grid>
            </TabItem>
        </TabControl>
        <MediaElement 
            Grid.Column="1" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Name="videoPlayer" />

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="BOGUS" Name="status" />
    </Grid>
</Window>
